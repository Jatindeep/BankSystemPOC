@page
@model Web.Pages.Customer.TransferFundsModel
@{
}
<div class="row">
    <form id="registerForm" method="post">
        <h1>Transfer Funds</h1>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-floating">
            <input asp-for="Input.Amount" class="form-control" aria-required="true" />
            <label asp-for="Input.Amount"></label>
            <span asp-validation-for="Input.Amount" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.SenderName" class="form-control" aria-required="true" />
            <label asp-for="Input.SenderName"></label>
            <span asp-validation-for="Input.SenderName" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.ReceiverName" class="form-control" aria-required="true" />
            <label asp-for="Input.ReceiverName"></label>
            <span asp-validation-for="Input.ReceiverName" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.ReceiverAccountNo" class="form-control" aria-required="true" />
            <label asp-for="Input.ReceiverAccountNo"></label>
            <span asp-validation-for="Input.ReceiverAccountNo" class="text-danger"></span>
        </div>
        
        <div class="mt-2">
            <button id="registerSubmit" type="submit" class="btn btn-primary">Transfer</button>
        </div>
    </form>
</div>

<div class="mt-3">
    <a href="/" class="btn btn-sm btn-outline-dark">Home</a>
</div>